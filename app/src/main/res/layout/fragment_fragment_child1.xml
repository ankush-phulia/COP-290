<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/coverpage2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

               <ExpandableListView
                    android:id="@+id/expandableListViewAssign"
                    android:layout_height="409dp"
                    android:layout_width="match_parent"
                    android:groupIndicator="@android:color/black"
                    android:divider="@android:color/black"
                    android:dividerHeight="0dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_gravity="center_horizontal|bottom"
                   android:layout_below="@+id/textView9"
                   android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textViewChild1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assignments"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp"
                    android:textColor="#800517"
                    android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" "
                android:id="@+id/textView9"
                android:layout_below="@+id/textViewChild1"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

</FrameLayout>