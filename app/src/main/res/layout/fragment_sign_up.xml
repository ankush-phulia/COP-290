<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.ribiero_boys.assignment_2.Sign_up"
    android:nestedScrollingEnabled="true">

    <ScrollView android:id="@+id/ScrlView" android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:fillViewport="false">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="User Registration"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="26dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" "
                android:id="@+id/textView7"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Name "
                    android:id="@+id/textView2"
                    android:layout_alignParentTop="true"
                    android:textColor="#000000"
                    android:layout_alignParentStart="true"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="*"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView21" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextName"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/ScrlView"
                android:hint="Enter your Full Name"
                android:selectAllOnFocus="true"
                android:textColor="#000000"
                android:textSize="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Username "
                    android:id="@+id/textView3"
                    android:layout_below="@+id/editText"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"
                    android:selectAllOnFocus="true"
                    android:textSize="22dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="*"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView31"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextUsername2"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/ScrlView"
                android:hint="Enter your Username"
                android:textColor="#000000"
                android:selectAllOnFocus="true"
                android:textSize="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Password "
                    android:id="@+id/textView4"
                    android:layout_above="@+id/editText4"
                    android:layout_alignParentStart="true"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:textSize="22dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="*"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView41"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextPassword2"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_alignEnd="@+id/ScrlView"
                android:hint="Enter your Password"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:textSize="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Confirm Password "
                    android:id="@+id/textView5"
                    android:layout_below="@+id/editText5"
                    android:layout_alignParentStart="true"
                    android:textColor="#000000"
                    android:layout_marginTop="24dp"
                    android:textSize="22dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="*"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView51"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextPasswordconf"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_alignEnd="@+id/ScrlView"
                android:hint="Re-enter your Password"
                android:inputType="textPassword"
                android:textColor="#000000"

                android:selectAllOnFocus="true"
                android:textSize="20dp" />

        </LinearLayout>


    </ScrollView>

        

</FrameLayout>
