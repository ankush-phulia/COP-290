<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ankush.test">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".RequestQ"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--Icon image courtesy: https://www.google.co.in/imgres?imgurl=http://tradefair.omaheke.com/wp-content/uploads/2015/07/register.png&imgrefurl=http://tradefair.omaheke.com/index.php/register-for-otf/&h=346&w=347&tbnid=aHjLKAn1JgGNpM:&docid=y2Lpbapbt8E-lM&ei=VMidVr7GMYWVuATrn4rQBg&tbm=isch&ved=0ahUKEwi-wMCQkbXKAhWFCo4KHeuPAmoQMwhBKBEwEQ
        -->
        
        <activity
            android:name=".Welcome"
            android:label="@string/homePageMessage"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".registry"
            android:label="Registry"
            android:parentActivityName=".Welcome"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ankush.test.Welcome" />
        </activity>
    </application>

</manifest>
