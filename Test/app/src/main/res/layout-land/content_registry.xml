<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ankush.test.registry"
    tools:showIn="@layout/activity_registry"
    android:background="@drawable/background1"
    android:nestedScrollingEnabled="true">

    <!--background courtesy manikandan from stack overflow-->

    <ScrollView android:id="@+id/ScrlView" android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:fillViewport="false">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Team Details"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="26sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" "
                android:id="@+id/textView7"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Team Name "
                    android:id="@+id/textView2"
                    android:layout_alignParentTop="true"
                    android:textColor="#ffffff"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="*"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView21" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_below="@+id/textView2"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/ScrlView"
                android:hint="Enter Team Name"
                android:selectAllOnFocus="true"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Member 1 "
                    android:id="@+id/textView3"
                    android:layout_below="@+id/editText"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffffff"
                    android:selectAllOnFocus="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="*"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView31"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/ScrlView"
                android:hint="Name of First Member"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:selectAllOnFocus="true"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:layout_below="@+id/editText2"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/ScrlView"
                android:hint="Entry Number of First Member"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:selectAllOnFocus="true"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Member 2 "
                    android:id="@+id/textView4"
                    android:layout_above="@+id/editText4"
                    android:layout_alignParentStart="true"
                    android:textColor="#ffffff"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="*"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView41"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText4"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/ScrlView"
                android:hint="Name of Second Member"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:selectAllOnFocus="true"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText5"
                android:layout_below="@+id/editText4"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/ScrlView"
                android:hint="Entry Number of Second Member"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:selectAllOnFocus="true"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Member 3 "
                    android:id="@+id/textView5"
                    android:layout_below="@+id/editText5"
                    android:layout_alignParentStart="true"
                    android:textColor="#ffffff"
                    android:layout_marginTop="24dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="*"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView51"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText6"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/ScrlView"
                android:hint="Name of Third Member"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:selectAllOnFocus="true"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText7"
                android:layout_below="@+id/editText6"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/ScrlView"
                android:hint="Entry Number of Third Member"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:selectAllOnFocus="true"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="35dp"
			    android:background="@drawable/custom_button"
			    android:textColor="#FFFFFF"
                android:text="Register"
                android:id="@+id/button2"
                android:layout_alignBottom="@+id/ScrlView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
